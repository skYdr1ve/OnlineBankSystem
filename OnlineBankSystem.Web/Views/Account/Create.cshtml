@model AccountEditViewModel

@{
    ViewData["Title"] = "Create account";
}

<div class="text-center w-md-75 w-lg-50 mx-auto my-4">
    <h2>@ViewData["Title"]</h2>
    <form method="post">
        <hr class="w-75" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name">
                Display name
                <span class="text-muted font-italic">(optional)</span>
            </label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CardName">Display card name</label>
            <input class="form-control" asp-for="CardName" />
            <span asp-validation-for="CardName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DepartamentId"></label>
            <select class="custom-select form-control" asp-for="DepartamentId">
                @foreach (var departament in Model.Departaments)
                {
                    <option value="@departament.Id">@departament.Address</option>
                }
            </select>
            <span asp-validation-for="DepartamentId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CurrencyNumber"></label>
            <select class="custom-select form-control" asp-for="CurrencyNumber">
                @foreach (var currency in Model.Currencies)
                {
                    <option value="@currency.Number">@currency.Code</option>
                }
            </select>
            <span asp-validation-for="CurrencyNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>