@{
    ViewData["Title"] = "Payment types";
}

<div class="row mx-lg-5">
    <div class="col-12 col-md-6 p-1">
        <div class="card floating-card shadow m-2 background-green h-100">
            <i class="fas fa-university fa-16x text-center my-4"></i>
            <div class="card-body">
                <h5 class="card-title">Internal transfer</h5>
                <p class="card-text">Money transfer between your accounts</p>
            </div>
            <div class="card-footer">
                <a asp-controller="Transaction" asp-action="CreateInternal" class="btn btn-primary align-bottom stretched-link">Create new payment</a>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-6 p-1">
        <div class="card floating-card shadow m-2 background-blue h-100">
            <i class="fas fa-globe-europe fa-16x text-center my-4"></i>
            <div class="card-body">
                <h5 class="card-title">Worldwide transfer</h5>
                <p class="card-text">Money transfer between bank accounts</p>
            </div>
            <div class="card-footer">
                <a asp-controller="Transaction" asp-action="CreateGlobal" class="btn btn-primary align-bottom stretched-link">Create new payment</a>
            </div>
        </div>
    </div>
</div>